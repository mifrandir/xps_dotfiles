{
    "window.menuBarVisibility": "toggle",
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.showWelcomeMessage": false,
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 20,
    "latex-workshop.latex.tools": [
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "lualatex",
            "tools": [
                "lualatex"
            ]
        },
        {
            "name": "lualatex -> bibtex -> lualatex*2",
            "tools": [
                "lualatex",
                "bibtex",
                "lualatex",
                "lualatex"
            ]
        }
    ],
    "editor.minimap.enabled": false,
    "explorer.openEditors.visible": 0,
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "explorer.confirmDelete": false,    
    "explorer.confirmDragAndDrop": false,
    "editor.fontLigatures": true,
    "color-highlight.markerType": "outline",
    "workbench.sideBar.location": "right",
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.fontSize": 18,
    "workbench.activityBar.visible": false,
    "workbench.editor.openPositioning": "left",
    "search.location": "sidebar",
    "latex-workshop.showContextMenu": true,
    "zenMode.restore": false,
    "zenMode.centerLayout": false,
    "languageServerHaskell.useCustomHieWrapper": true,
    "languageServerHaskell.useCustomHieWrapperPath": "/home/miltfra/.local/bin/hie-wrapper",
    "workbench.colorTheme": "lucy",
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "cpp": "cd $dir; g++ -std=c++17 $fileName -o $fileNameWithoutExt.out; $dir$fileNameWithoutExt.out"
    },
    "window.zoomLevel": 0,
    "bracket-pair-colorizer-2.colors": [
        "#c3b5d3",
        "#88898f",
        "#5e6173"
    ],
    "window.titleBarStyle": "native",
    "python.formatting.provider": "yapf"
    
}